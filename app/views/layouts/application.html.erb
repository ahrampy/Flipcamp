<!DOCTYPE html>
<html>
  <head>
    <title>Flipcamp | Naturally Discover</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('tent.png') %>

    <%= javascript_include_tag
    "https://maps.googleapis.com/maps/api/js?key=AIzaSyAPjYkDq0-iiCd6W5-qCw46J-r0EW39L1U"
    %> <%= stylesheet_link_tag 'application', media: 'all' %> <%= csrf_meta_tags
    %> <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.googleAPIKey = "<%= Rails.application.credentials.google[:api_key] %>"
    </script>

    <% if current_user %>
        <script>
          window.currentUser = { 
            "id": <%= current_user.id %>,
            "email": "<%= current_user.email %>",
            "first_name": "<%= current_user.first_name %>",
            "last_name": "<%= current_user.last_name %>",
            };
        </script>
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
  
</html>
