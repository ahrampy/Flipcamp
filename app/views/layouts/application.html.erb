<!DOCTYPE html>
<html>
  <head>
    <title>Flipcamp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('tent.png') %>

  </head>
    <% if current_user %>
        <script>
          window.currentUser = { 
            "id": <%= current_user.id %>,
            "email": "<%= current_user.email %>",
            "first_name": "<%= current_user.first_name %>",
            "last_name": "<%= current_user.last_name %>",
            };
        </script>
    <% end %>
  <body>
    <%= yield %>
  </body>
</html>
